<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alexzh.imbarista">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="OnlineMaps.Key"
                android:value="@string/tomtom_maps_api_key" />
        <meta-data
                android:name="OnlineSearch.Key"
                android:value="@string/tomtom_maps_api_key" />
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_api_key"/>

        <activity
                android:name=".login.LoginActivity"
                android:windowSoftInputMode="stateVisible|adjustResize"
                android:label="@string/activity_login_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".createaccount.CreateAccountActivity"
                android:windowSoftInputMode="stateVisible|adjustResize"
                android:label="@string/activity_create_account_title">
        </activity>
        <activity android:name=".home.HomeActivity">
        </activity>
        <activity android:name=".coffeedetails.CoffeeDetailsActivity">
        </activity>
        <activity
                android:name=".settings.SettingsActivity"
                android:label="@string/activity_settings_title">
        </activity>
    </application>

</manifest>